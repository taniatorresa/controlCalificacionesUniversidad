  <h1 class="enc">Facultades</h1>

<div class="scop">
  <table>
    <thead>
      <tr>
        <th>Nombre de la facultad</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @faculties.each do |faculty| %>
        <tr>
          <td>
            <span class="">
              <%= faculty.nombre_facultad %>
            </span>
          </td>
          <td>
            <%= link_to faculty do%>
              <button type="button" class="btn btn-success">Show</button>
            <% end %>
          </td>
          <td>
            <%= link_to edit_faculty_path(faculty) do%>
              <div class="btn-edit">
                Edit
              </div>
            <% end %>  
           </td>
          <td>
           <!-- <%= link_to 'Destroy', faculty, method: :delete, data: { confirm: 'Are you sure?' } %> -->
           <%= link_to faculty , :method => :delete, :data => {:confirm => "You Sure?"} do%>
              <div class="btn-delete">
                Eliminar
              </div>
           <% end %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
 

  <div class="btn-1">
  <%= link_to new_faculty_path do %>
    <div class="btn-1">
     Agregar Facultad
    </div>
  <% end %>
  </div>



